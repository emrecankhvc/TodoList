@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model TodoProject.Entities.TodoItem
@{
    ViewData["Title"] = @Localizer["PageTitle"];
}

<div class="container mt-5">
    <h2 class="mb-4 text-warning">@Localizer["PageTitle"]</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label">@Localizer["Title"] *</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">@Localizer["Description"]</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="Category" class="form-label">@Localizer["Category"]</label>
            <select asp-for="Category" class="form-control" >
                <option value="">@Localizer["SelectPlaceHolder"]</option>
                <option value="School" selected="@("School" == Model.Category)">@Localizer["Category_School"]</option>
                <option value="Work" selected="@("Work" == Model.Category)">@Localizer["Category_Work"]</option>
                <option value="Sport" selected="@("Sport" == Model.Category)">@Localizer["Category_Sport"]</option>
                </select>
        </div>

        <div class="mb-3">
            <label asp-for="DueDate" class="form-label">@Localizer["DueDate"] *</label>
            <input asp-for="DueDate" class="form-control" type="datetime-local" value="@Model.DueDate.ToString("yyyy-MM-ddTHH:mm")" />
            <span asp-validation-for="DueDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Priority" class="form-label">@Localizer["Priority"] *</label>
            <select asp-for="Priority" class="form-select">
                <option value="">@Localizer["SelectPlaceHolder"]</option>
                <option value="Low" selected="@("Low" == Model.Priority)">@Localizer["Priority_L"]</option>
                <option value="Medium" selected="@("Medium" == Model.Priority)">@Localizer["Priority_m"]</option>
                <option value="High" selected="@("High" == Model.Priority)">@Localizer["Priority_H"]</option>
            </select>
            <span asp-validation-for="Priority" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Status" class="form-label">@Localizer["Status"] *</label>
            <select asp-for="Status" class="form-select">
                <option value="">@Localizer["SelectPlaceHolder"]</option>
                <option value="U" selected="@("U" == Model.Status)">@Localizer["Status_UC"]</option>
                <option value="I" selected="@("I" == Model.Status)">@Localizer["Status_IP"]</option>
                <option value="C" selected="@("C" == Model.Status)">@Localizer["Status_C"]</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a href="/Todo/Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
            <button type="submit" class="btn btn-warning">@Localizer["SaveChanges"]</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
