@model TodoProject.Entities.TodoItem
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0 rounded-4 details-card">
                <!-- Header -->
                <div class="card-header details-header border-0 rounded-top-4">
                    <h3 class="mb-0 text-white">
                        <i class="fas fa-info-circle me-3"></i>
                        @Localizer["TaskDetails"]
                    </h3>
                </div>

                <!-- Body -->
                <div class="card-body p-5">
                    <!-- Title -->
                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-heading text-primary me-2"></i>
                            <strong>@Localizer["Title"]:</strong>
                        </div>
                        <div class="detail-value">
                            <h5 class="mb-0 text-dark">@Model.Title</h5>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-align-left text-info me-2"></i>
                            <strong>@Localizer["Description"]:</strong>
                        </div>
                        <div class="detail-value">
                            <p class="mb-0 text-muted">@(Model.Description ?? Localizer["NoDescription"].ToString())</p>
                        </div>
                    </div>

                    <!-- Category -->
                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-tag text-success me-2"></i>
                            <strong>@Localizer["Category"]:</strong>
                        </div>
                        <div class="detail-value">
                            @switch (Model.Category)
                            {
                                case "School":
                                    <span class="badge category-school fs-6 px-3 py-2">
                                        <i class="fas fa-graduation-cap me-1"></i>@Localizer["Category_School"]
                                    </span>
                                    break;
                                case "Work":
                                    <span class="badge category-work fs-6 px-3 py-2">
                                        <i class="fas fa-briefcase me-1"></i>@Localizer["Category_Work"]
                                    </span>
                                    break;
                                case "Sport":
                                    <span class="badge category-sport fs-6 px-3 py-2">
                                        <i class="fas fa-dumbbell me-1"></i>@Localizer["Category_Sport"]
                                    </span>
                                    break;
                                default:
                                    <span class="badge category-default fs-6 px-3 py-2">@Model.Category</span>
                                    break;
                            }
                        </div>
                    </div>

                    <!-- Due Date -->
                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-calendar text-warning me-2"></i>
                            <strong>@Localizer["DueDate"]:</strong>
                        </div>
                        <div class="detail-value">
                            <span class="text-dark fw-medium">@Model.DueDate.ToString("dd MMMM yyyy HH:mm")</span>
                        </div>
                    </div>

                    <!-- Status -->
                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-info-circle text-primary me-2"></i>
                            <strong>@Localizer["Status"]:</strong>
                        </div>
                        <div class="detail-value">
                            @switch (Model.Status?.ToUpper())
                            {
                                case "C":
                                    <span class="badge status-completed fs-6 px-3 py-2">
                                        <i class="fas fa-check me-1"></i>@Localizer["Status_C"]
                                    </span>
                                    break;
                                case "I":
                                    <span class="badge status-inprogress fs-6 px-3 py-2">
                                        <i class="fas fa-play me-1"></i>@Localizer["Status_IP"]
                                    </span>
                                    break;
                                case "U":
                                    <span class="badge status-uncompleted fs-6 px-3 py-2">
                                        <i class="fas fa-pause me-1"></i>@Localizer["Status_UC"]
                                    </span>
                                    break;
                                default:
                                    <span class="badge status-unknown fs-6 px-3 py-2">@Localizer["Unknown"]</span>
                                    break;
                            }
                        </div>
                    </div>

                    <!-- Priority -->
                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-exclamation-triangle text-danger me-2"></i>
                            <strong>@Localizer["Priority"]:</strong>
                        </div>
                        <div class="detail-value">
                            @switch (Model.Priority)
                            {
                                case "High":
                                    <span class="badge priority-high fs-6 px-3 py-2">
                                        <i class="fas fa-arrow-up me-1"></i>@Localizer["Priority_High"]
                                    </span>
                                    break;
                                case "Medium":
                                    <span class="badge priority-medium fs-6 px-3 py-2">
                                        <i class="fas fa-equals me-1"></i>@Localizer["Priority_Medium"]
                                    </span>
                                    break;
                                case "Low":
                                    <span class="badge priority-low fs-6 px-3 py-2">
                                        <i class="fas fa-arrow-down me-1"></i>@Localizer["Priority_Low"]
                                    </span>
                                    break;
                                default:
                                    <span class="badge priority-unknown fs-6 px-3 py-2">@Model.Priority</span>
                                    break;
                            }
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="card-footer details-footer border-0 rounded-bottom-4 p-4">
                    <div class="d-flex gap-3 justify-content-center">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-gradient btn-lg px-4 py-2">
                            <i class="fas fa-edit me-2"></i>@Localizer["Edit"]
                        </a>
                        <a asp-action="Index" class="btn btn-details-back btn-lg px-4 py-2">
                            <i class="fas fa-list me-2"></i>@Localizer["BackToList"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>