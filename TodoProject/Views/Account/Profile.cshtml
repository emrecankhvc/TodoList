@{
    ViewData["Title"] = "Profile";
    Layout = "_Layout";
}


<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>

</div>

<div class="row mt-4">
    <div class="col-4">

        <div class="mb-4">
            <div asp-asp-validation-summary="All" class="text-danger small"></div>
        </div>  

        <form method="post" asp-action="ProfileChangeFullName">
            <div class="form-group">
                <label class="form-label small">İsim Soyisim</label>
                <div class="input-group mb-3">
                    <input name="fullname" type="text" class="form-control" placeholder="Kodit" value="@ViewData["FullName"]" />
                    <button class="btn btn-secondary" type="submit"><i class="fa-solid fa-floppy-disk me-1"></i>Kaydet</button>
                </div>
            </div>
        </form>
        <form method="post" asp-action="ProfileChangePassword">
            <div class="form-group">
                <label class="form-label small">Yeni Şifre</label>
                <div class="input-group mb-1">
                    <input name="password" type="password" class="form-control" placeholder="xxxxx" />
                    <button class="btn btn-secondary" type="submit"><i class="fa-solid fa-floppy-disk me-1"></i>Kaydet</button>
                </div>
                @if (ViewData["result"] != null && ViewData["result"] == "Şifreniz başarıyla değiştirildi.")
                {
                    <span class="text-success small">Şifre Güncellendi.</span>
                }

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @if (ViewData["result"] != null && ViewData["result"] == "Şifreniz başarıyla değiştirildi.")
    {
        <script>
            toastr["success"]("Şifreniz Değiştirilmiştir.", "Şifre Değişti!");
        </script>
    }
    
    
}