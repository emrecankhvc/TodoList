@model LoginViewModel
@{  
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}


<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>

</div>
<div class="row">
    <div class="col-4 offset-4">
       <form method="post">
           <div asp-validation-summary="ModelOnly" class="text-danger small"></div>       
          
           <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="kodit123" />
                <span asp-validation-for="Username" class="text-danger small"></span>
           </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="xxxxxx" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group d-grid mb-3">
                <button type="submit" class="btn btn-primary d-block"><i class="fa-solid fa-arrow-right-to-bracket me-1"></i>Login</button>
       </form>
    </div>



</div>